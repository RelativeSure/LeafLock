# Containerfile for Podman - More secure than Dockerfile
FROM docker.io/golang:1.25-alpine@sha256:b6ed3fd0452c0e9bcdef5597f29cc1418f61672e9d3a2f55bf02e7222c014abd AS builder

# Security: Create non-root user at build time
RUN adduser -D -u 10001 -g 10001 appuser

# Install certificates and timezone data
RUN apk add --no-cache ca-certificates tzdata git

WORKDIR /build

# Copy dependency files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build with security flags
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build \
    -ldflags="-w -s -X main.version=1.0.0" \
    -trimpath \
    -o leaflock-backend \
    .

# Ensure binary is executable in builder layer
RUN chmod +x /build/leaflock-backend

# Build entrypoint wrapper that sets defaults and execs the main binary
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build \
    -ldflags="-w -s" \
    -trimpath \
    -o /build/entrypoint \
    ./cmd/entrypoint && \
    chmod +x /build/entrypoint

# Create minimal runtime image
FROM scratch

# Copy from builder
COPY --from=builder /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/
COPY --from=builder /usr/share/zoneinfo /usr/share/zoneinfo
COPY --from=builder /etc/passwd /etc/passwd
# Copy binaries with explicit execute permissions
COPY --from=builder --chmod=0755 /build/leaflock-backend /app/leaflock-backend
COPY --from=builder --chmod=0755 /build/entrypoint /app/entrypoint

# Use non-root user
USER appuser:appuser

# Expose port (high port for rootless)
EXPOSE 8080

# Security labels for Podman
LABEL io.containers.seccomp="runtime/default"

ENV BACKEND_BINARY=/app/leaflock-backend
ENTRYPOINT ["/app/entrypoint"]
