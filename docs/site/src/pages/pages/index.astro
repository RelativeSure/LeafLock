---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = "Documentation";
const description = "Browse all LeafLock documentation pages.";

const pages = [
  {
    title: "Privacy Policy",
    description: "How LeafLock collects, uses, and safeguards personal data across deployments.",
    href: "/pages/privacy-policy/",
    tags: ["privacy", "data-collection", "personal-data", "user-rights"],
    icon: "üîí",
    category: "Legal"
  },
  {
    title: "Terms of Use",
    description: "Conditions governing access to the LeafLock platform and services.",
    href: "/pages/terms-of-use/",
    tags: ["terms", "agreement", "service", "responsibilities"],
    icon: "üìú",
    category: "Legal"
  },
  {
    title: "GDPR Compliance",
    description: "Comprehensive GDPR compliance guide for LeafLock deployments.",
    href: "/pages/gdpr-compliance/",
    tags: ["gdpr", "data-protection", "compliance", "european-law"],
    icon: "üõ°Ô∏è",
    category: "Legal"
  },
  {
    title: "GDPR Operations Guide",
    description: "Operational procedures for GDPR compliance in LeafLock deployments.",
    href: "/pages/gdpr-operations-guide/",
    tags: ["gdpr", "operations", "data-rights", "procedures"],
    icon: "‚öñÔ∏è",
    category: "Legal"
  },
  {
    title: "Admin Guide",
    description: "Complete administration guide for LeafLock deployments.",
    href: "/pages/admin-guide/",
    tags: ["admin", "deployment", "configuration", "user-management"],
    icon: "‚öôÔ∏è",
    category: "Administration"
  },
  {
    title: "Developer Guide",
    description: "API documentation, testing guides, and development workflows.",
    href: "/pages/developer-guide/",
    tags: ["development", "api", "testing", "workflows"],
    icon: "üíª",
    category: "Development"
  },
  {
    title: "Monitoring & Backups",
    description: "Monitoring, logging, and backup strategies for production deployments.",
    href: "/pages/monitoring-and-backups/",
    tags: ["monitoring", "backups", "logging", "production"],
    icon: "üìä",
    category: "Administration"
  },
  {
    title: "Global Compliance",
    description: "Multi-jurisdictional compliance requirements and implementation.",
    href: "/pages/global-compliance/",
    tags: ["compliance", "global", "regulations", "international"],
    icon: "üåç",
    category: "Legal"
  },
  {
    title: "License",
    description: "LeafLock software license and usage terms.",
    href: "/pages/license/",
    tags: ["license", "legal", "open-source", "usage"],
    icon: "üìÑ",
    category: "Legal"
  }
];

const groupedPages = pages.reduce((acc, page) => {
  if (!acc[page.category]) {
    acc[page.category] = [];
  }
  acc[page.category].push(page);
  return acc;
}, {} as Record<string, typeof pages>);
---

<BaseLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-emerald-50 via-blue-50 to-violet-50 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-emerald-600 via-blue-600 to-violet-600 bg-clip-text text-transparent">
          üìñ Documentation
        </h1>
        <p class="text-xl md:text-2xl text-slate-600 dark:text-slate-300 mb-8 max-w-3xl mx-auto">
          Comprehensive documentation for LeafLock's secure notes platform. Browse all documentation pages below or use the navigation to jump to specific sections.
        </p>
        
        <!-- Search hint -->
        <div class="inline-flex items-center px-6 py-3 bg-white/50 dark:bg-slate-800/50 backdrop-blur-sm rounded-full border border-slate-200 dark:border-slate-700 text-slate-600 dark:text-slate-400">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          Use Ctrl+F to search within pages
        </div>
      </div>
    </div>
  </section>

  <!-- Documentation Grid -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    {Object.entries(groupedPages).map(([category, categoryPages]) => (
      <div class="mb-16">
        <h2 class="text-2xl md:text-3xl font-bold text-slate-900 dark:text-white mb-8 flex items-center">
          <span class="w-8 h-1 bg-gradient-to-r from-emerald-500 to-blue-500 rounded-full mr-4"></span>
          {category}
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {categoryPages.map(page => (
            <a href={page.href} class="group block bg-white dark:bg-slate-800 rounded-2xl shadow-lg border border-slate-200 dark:border-slate-700 p-6 card-hover">
              <div class="flex items-start space-x-4">
                <div class="text-3xl">{page.icon}</div>
                <div class="flex-1 min-w-0">
                  <h3 class="text-lg font-bold text-slate-900 dark:text-white group-hover:text-emerald-600 dark:group-hover:text-emerald-400 mb-2 transition-colors duration-200">
                    {page.title}
                  </h3>
                  <p class="text-slate-600 dark:text-slate-400 text-sm mb-4 leading-relaxed">
                    {page.description}
                  </p>
                  <div class="flex flex-wrap gap-2">
                    {page.tags.slice(0, 3).map(tag => (
                      <span class="tag-modern">
                        #{tag}
                      </span>
                    ))}
                    {page.tags.length > 3 && (
                      <span class="px-2 py-1 text-xs text-slate-500 dark:text-slate-400">
                        +{page.tags.length - 3} more
                      </span>
                    )}
                  </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    ))}
  </section>

  <!-- Browse by Topic -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="bg-slate-50 dark:bg-slate-800/50 rounded-3xl p-8 md:p-12 border border-slate-200 dark:border-slate-700">
      <h2 class="text-3xl md:text-4xl font-bold text-slate-900 dark:text-white mb-8 text-center">
        üè∑Ô∏è Browse by Topic
      </h2>
      
      <div class="flex flex-wrap justify-center gap-3">
        {["privacy", "gdpr", "admin", "development", "legal", "data-protection", "compliance", "api", "monitoring", "backups"].map(tag => (
          <a href={`/tags/${tag}/`} class="px-4 py-2 bg-white dark:bg-slate-800 text-slate-700 dark:text-slate-300 rounded-full text-sm font-medium hover:bg-emerald-50 dark:hover:bg-emerald-900/20 hover:text-emerald-600 dark:hover:text-emerald-400 transition-all duration-200 border border-slate-200 dark:border-slate-700 hover:border-emerald-300 dark:hover:border-emerald-600 shadow-sm hover:shadow-md">
            #{tag}
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>