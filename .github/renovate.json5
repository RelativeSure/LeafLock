{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>kubearchitect/renovate-runner//.github/renovate.json5',
  ],
  prConcurrentLimit: 5,
  prHourlyLimit: 10,
  rebaseWhen: 'conflicted',
  dependencyDashboard: true,
  ignoreTests: true,
  pinDigests: false,
  gomod: {
    enabled: true,
  },
  packageRules: [
    {
      matchCategories: [
        'docker',
      ],
      enabled: true,
    },
    {
      description: 'Docker base images in Dockerfiles',
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        'postgres',
        'redis',
        'nginx',
        'golang',
        'node',
        'alpine',
      ],
      enabled: true,
      automerge: false,
      reviewers: [
        'team:maintainers',
      ],
    },
    {
      description: 'Go language version and modules',
      matchFileNames: [
        'backend/go.mod',
        'backend/go.sum',
      ],
      enabled: true,
      automerge: false,
    },
    {
      description: 'Node.js and pnpm versions',
      matchFileNames: [
        'package.json',
        'pnpm-lock.yaml',
        'frontend/package.json',
        'frontend/pnpm-lock.yaml',
      ],
      matchPackageNames: [
        'pnpm',
        '@pnpm/exe',
      ],
      enabled: true,
      automerge: false,
    },
    {
      description: 'Security updates - auto-merge patch and minor versions',
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      automerge: true,
      labels: [
        'security',
        'auto-merge',
      ],
      matchPackageNames: [
        '/.*/',
      ],
    },
  ],
}
