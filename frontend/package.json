    "cmdk": "^1.1.1",
    "libsodium-wrappers": "^0.7.15",
    "lucide-react": "^0.544.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@playwright/test": "1.48.2",
    "@eslint/js": "9.35.0",
    "@tailwindcss/postcss": "4.1.13",
