{
  "name": "leaflock-frontend",
  "version": "0.0.1-rc.20250910210438",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,json,css,md}",
    "format:check": "prettier --check src/**/*.{js,jsx,ts,tsx,json,css,md}",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:pw": "playwright test",
    "test:security": "vitest run src/**/*.test.js --reporter=verbose",
    "test:e2e": "vitest run src/e2e.test.js",
    "clean": "rm -rf dist node_modules/.vite coverage",
    "analyze": "vite build --mode analyze",
    "serve": "vite preview --host 0.0.0.0",
    "check-all": "npm run type-check && npm run lint && npm run format:check && npm run test"
  },
  "dependencies": {
