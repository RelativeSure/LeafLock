# Containerfile for Podman - Frontend
FROM docker.io/node:22-alpine@sha256:d2166de198f26e17e5a442f537754dd616ab069c47cc57b889310a717e0abbf9 AS builder

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm@10.15.1

# Copy package files
COPY package.json pnpm-lock.yaml ./
RUN pnpm install --frozen-lockfile --prod

# Copy source
COPY . .

# Build with API URL
ARG VITE_API_URL=http://localhost:8080
ENV VITE_API_URL=$VITE_API_URL
RUN pnpm run build

# Production stage with nginx - rootless configuration
FROM docker.io/nginxinc/nginx-unprivileged:alpine@sha256:5a3deab083279228447546aa54db9ab82e43065cac3e38f70b2b2a6cdbf57f7a

# Remove default config
RUN rm -rf /etc/nginx/conf.d/*

# Copy custom nginx config for rootless
COPY --chown=nginx:nginx nginx-rootless.conf /etc/nginx/conf.d/default.conf

# Copy built app
COPY --from=builder --chown=nginx:nginx /app/dist /usr/share/nginx/html

# Use high port for rootless operation
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8080/ || exit 1

# Security labels
LABEL io.containers.capabilities="drop=ALL"
LABEL io.containers.seccomp="runtime/default"

USER nginx:nginx

CMD ["nginx", "-g", "daemon off;"]
